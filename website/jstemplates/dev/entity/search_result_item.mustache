{{#entity.is_movie}}
    <div class="search_result_item well well-small" entity_id="{{ entity.id }}">
        <div class="info-labels pull-right">
            <span class="label">{{ entity.id }}</span>
            <span class="label label-info">Movie</span>
        </div>
        <h3>{{ entity.title }} ({{ entity.year }})</h3>
{{/entity.is_movie}}

{{#entity.is_music}}
    <div class="search_result_item well well-small" entity_id="{{ entity.id }}">
        <div class="info-labels pull-right">
            <span class="label">{{ entity.id }}</span>
            {{#entity.track}}
                <span class="label label-info">Track</span>
            {{/entity.track}}
            {{^entity.track}}
                {{#entity.album}}
                    <span class="label label-info">Album</span>
                {{/entity.album}}
                {{^entity.album}}
                    <span class="label label-info">Artist</span>
                {{/entity.album}}
            {{/entity.track}}
        </div>


        <h3>{{ entity.artist }}</h3>
        {{#entity.album}}
            <h5>
                {{ entity.album }}
                {{#entity.track}} - {{ entity.track }}{{/entity.track}}
            </h5>
        {{/entity.album}}
{{/entity.is_music}}

    <table class="table">
        <thead>
            <tr>
                <th style="width: 30px;">ID</th>
                <th style="width: 50px;">Type</th>
                <th>Recipient</th>
                <th style="width: 90px;">Claimed</th>
            </tr>
        </thead>
        <tbody>
            {{#entity.recipients}}
                <tr>
                    <td><span class="label">{{ id }}</span></td>
                    <td><span class="label label-info">{{ type_label }}</span></td>
                    <td>{{ title }}</td>
                    <td>
                        {{#claimed}}
                            <span class="label label-success" style="width: 21px; text-align: center;">Yes</span>
                        {{/claimed}}
                        {{^claimed}}
                            <span class="label label-important" style="width: 21px; text-align: center;">No</span>
                        {{/claimed}}
                    </td>
                </tr>
            {{/entity.recipients}}
        </tbody>
    </table>

    </div>